<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    //scrollbar styles
    <style name="ScrollBarStyle" parent="ScrollBarStyle">
        <item name="android:scrollbarThumbHorizontal">@drawable/thumb_drawable</item>
        <item name="android:scrollbarTrackHorizontal">@drawable/line_drawable</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/line</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:smoothScrollbar">true</item>

        <!--android:scrollbarThumbHorizontal="@drawable/thumb_drawable"-->
        <!--android:scrollbarTrackHorizontal="@drawable/line_drawable"-->
        <!--android:scrollbarThumbVertical="@drawable/thumb"-->
        <!--android:scrollbarTrackVertical="@drawable/line"-->
        <!--android:scrollbarStyle="insideOverlay"-->
    </style>

    <style name="FastScrollBarStyle">
        <item name="android:fastScrollThumbDrawable">@drawable/thumb_drawable</item>
        <item name="android:fastScrollTrackDrawable">@drawable/line_drawable</item>
        <item name="android:fastScrollOverlayPosition">aboveThumb</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
    </style>
</resources>
